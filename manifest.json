{
  "manifest_version": 2,
  "name": "DNSTR Domain redirector",
  "version": "0.1",
  "description": "A Firefox extension that resolves .nostr npub addresses.",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "webNavigation",
    "storage",
    "tabs",
    "notifications",
    "declarativeNetRequest",
    "*://*.nostr/*"
  ],
  "browser_action": {
    "default_icon": {
      "48": "images/icon48.png"
    },
    "default_popup": "options.html"
  },
  "icons": {
    "48": "images/icon48.png"
  },
  "options_ui": {
    "page": "options.html"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  }
}